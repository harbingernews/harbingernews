<% content_for :css do %>
  <%= stylesheet_link_tag    "clubs", :media => "all" %>
<% end %>
<% content_for :js do %>
  <script type="text/javascript">
    $(function(){
      $('#nav_clubs').addClass('active');
    });
  </script>
<% end %>
<% content_for :above_container do %>
  <%= render 'club_header' %>
<% end %>

<div class="row">
  <div id = "announcements" class = "span10 offset1" style = "border-radius: 5px; margin-bottom: 5px;">
  
    <h1>Club Announcements</h1>
    
    <div class = "offset1">
    <% @all.each do |announcement| %>
    
      <li> <%= announcement.content %> </li>
    
    <% end %>
    </div>
  </div>
</div>
